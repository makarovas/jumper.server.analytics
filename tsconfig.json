{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    // "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "lib": ["ESNext"],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": false,
    "noEmit": false,
    "sourceMap": true,
    "allowJs": true
  }
}
